
<!DOCTYPE html>
<html>
<head>
  <title>Admin - Videos</title>
  
  <link rel="stylesheet" href="/assets/css/commonStyles.css">
  <link rel="stylesheet" href="/assets/css/table.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.css"  crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-blue">
  <%- include('components/sidebar') %>
  <%- include('components/header') %>
 
  <div class="main-content">
    <div class="export-button">
      <h2>Videos</h2>
      <a class="btn-main" style="display:none ;" id="export-link" href="/api/v1/videos/export">Export</a>
    </div>
    <div class="table-class">
      <div class="record-class">
        <div>
          <label>Records</label>
          <select id="recordsPerPageSelect">
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="100">100</option>
          </select>
        </div>
        <div class="date-range-picker-class">
          <label>Date Range</label>
          <input type="text" id="dateRangePicker" placeholder="Select a date range">
          <button id="resetButton">Reset</button>
        </div>
      </div>
      

      <table>
        <thead>
          <tr>
            
            <th><a data-sort-column="is_opt_in_post_media" href="#" onclick="sortTable(event)">Post Media Opt-in </a></th>
            <th><a data-sort-column="video_feed" href="#" onclick="sortTable(event)">Video Feed</a></th>
           
            <th><a data-sort-column="created_ts" href="#" onclick="sortTable(event)">Created At</a></th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody  id="tableData">
        
        </tbody>
      </table>
      <div id="pagination-main"> <span id="pagination-info"></span>  <div id="pagination"></div></div>
    </div>
  </div>
  <%- include('components/footer') %>
 
  <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.js"  crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  
  <script src="/assets/js/paginationVideos.js"></script>

</body>
</html>