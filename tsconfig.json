{
    "compilerOptions": {
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react"
    },
    "include": ["**/*"],
    "exclude": [
        "./node_modules",
        "build",
        "scripts"
    ],
    "lib":["es2015"]
}
